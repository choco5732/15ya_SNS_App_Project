<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51FFEB3B"
    tools:context=".SiginUpActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/signuptoolbar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="0dp">

        <Button
            android:id="@+id/cancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="finish"
            android:text="뒤로가기"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="8dp" />


    </androidx.appcompat.widget.Toolbar>

    <ImageView
        android:id="@+id/signuptoolbarimg"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuptoolbar" />

    <LinearLayout
        android:id="@+id/signuplinearlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/signuptoolbarimg"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="아이디"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/id_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:text="아이디를 입력해주세요."
            android:textSize="18dp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/dublecheck_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="18dp"
            android:text="중복체크" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/signuplinearlayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/signuplinearlayout"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="비밀번호"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/password_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:text="비밀번호를 입력해주세요."
            android:textSize="18dp"
            android:textStyle="normal" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/signuplinearlayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/signuplinearlayout2"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"
            android:text="이름"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/name_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="이름을 입력해주세요."
            android:textSize="18dp"
            android:textStyle="normal" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/signuplinearlayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/signuplinearlayout3"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="MBTI"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/mbti_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
            android:inputType="textCapCharacters"
            android:maxLength="4"
            android:maxLines="1"
            android:text="MBTI를 입력해주세요."
            android:textSize="18dp"
            android:textStyle="normal" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/signuplinearlayout5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@+id/signuplinearlayout4"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="소개글"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/profile_ed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:text="소개글을 입력해주세요."
            android:textSize="18dp"
            android:textStyle="normal" />


    </LinearLayout>

    <Button
        android:id="@+id/signup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:onClick="signupButton"
        android:text="회원가입"
        app:constraintTop_toBottomOf="@+id/signupl"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/signuplinearlayout5" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="회원가입화면 예시"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>